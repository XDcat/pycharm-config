<templateSet group="python log">
  <template name="vdebug" value="log.debug(&quot;$variable_$ = %s&quot;, $var$)" description="debug 输出变量" toReformat="false" toShortenFQNames="true">
    <variable name="var" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="variable_" expression="var" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="Python" value="true" />
    </context>
  </template>
  <template name="vinfo" value="log.info(&quot;$variable_$ = %s&quot;, $var$)" description="log 输出变量" toReformat="false" toShortenFQNames="true">
    <variable name="var" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="variable_" expression="var" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="Python" value="true" />
    </context>
  </template>
  <template name="initlog" value="import logging&#10;import logconfig&#10;logconfig.setup_logging()&#10;log = logging.getLogger(&quot;$logname$&quot;)" description="初始化log" toReformat="false" toShortenFQNames="true">
    <variable name="logname" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="Python" value="true" />
    </context>
  </template>
</templateSet>